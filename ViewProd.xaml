<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelaLogin.ViewProd"
             Title="Visualizar Produto">

    <StackLayout>
        <Label x:Name="txtNome">Nome: </Label>

        <Label x:Name="txtDescricao">Descrição: </Label>

        <Label x:Name="txtMarca">Marca: </Label>

        <Label x:Name="txtPreco">Preço: </Label>

        <Label x:Name="txtCodBar">Código de Barras: </Label>

        <Label x:Name="txtUnMed">Unidade de medida: </Label>

        <Label x:Name="txtQtd">Quantidade: </Label>

        <Label x:Name="txtUsuario">Usuário: </Label>

        <Label x:Name="txtData">Data: </Label>

        <Image x:Name="imgCarro"
               HeightRequest="300"/>

        <Button
            x:Name="btnCadastrar"
            Text="Cadastrar produto"
            Clicked="btnCadProd_Clicked"
            BackgroundColor="Purple"
            TextColor="White"
            VerticalOptions="End"
            Margin="5"
            />

        <Button
            x:Name="btnVoltar"
            Text="Voltar"
            Clicked="btnVoltar_Clicked"
            BackgroundColor="MediumPurple"
            TextColor="White"
            VerticalOptions="End"
            Margin="5"
            />
    </StackLayout>
</ContentPage>