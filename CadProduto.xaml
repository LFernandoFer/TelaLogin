<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelaLogin.CadProduto"
             Title="CadProduto">
    <StackLayout>

        <Label>Nome:</Label>
        <Entry Placeholder="Nome"
               x:Name="txtNome"/>

        <Label>Descrição:</Label>
        <Entry Placeholder="Descrição"
               x:Name="txtDescricao"/>
        
        <Label>Marca:</Label>
                <Entry Placeholder="Marca"
                       x:Name="txtMarca"/>

        <Label>Preço:</Label>
        <Entry Placeholder="Preço"
            x:Name="txtPreco"/>


        <Label>Código de Barras</Label>
        <Entry Placeholder="Código de barras"
               x:Name="txtCodBar"/>
        
        <Label>Unidade de Medida:</Label>
        <Entry Placeholder="Unidade de Medida"
               x:Name="txtUnMed"/>

        <Label>Quantidade:</Label>
        <Entry Placeholder="Quantidade"
               x:Name="txtQtd"/>
        <Button 
            Text="Cadastrar"
            TextColor="White"
            BackgroundColor="Purple"
            x:Name="btnCadastrar"
            Clicked="btnCadastrar_Clicked"
            />

    </StackLayout>    
</ContentPage>